{
    "extends": "tslint-config-standard",
    "globals": {
      "require": true
    },
    "no-trailing-whitespace": false,
    "one-line": [
      false,
      "check-open-brace",
      "check-catch",
      "check-else",
      "check-whitespace"
    ],
    "whitespace": [
      false,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-separator",
      "check-type"
    ]
}